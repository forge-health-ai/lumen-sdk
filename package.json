{
  "name": "@forgehealth/lumen-sdk",
  "version": "1.0.4",
  "repository": {
    "type": "git",
    "url": "https://github.com/forge-health-ai/lumen-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/forge-health-ai/lumen-sdk/issues"
  },
  "description": "Runtime governance for healthcare AI. Score every clinical AI decision against HIPAA, PHIPA, NIST AI RMF, and CHAI frameworks. Zero dependencies.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "bin": {
    "lumen-sdk": "./dist/cli/init.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "NOTICE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean && tsup src/cli/init.ts --format cjs --outDir dist/cli --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "init": "ts-node src/cli/init.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "healthcare",
    "ai",
    "governance",
    "compliance",
    "hipaa",
    "phipa",
    "clinical-ai",
    "medical-ai",
    "runtime-governance",
    "ai-safety",
    "healthcare-compliance",
    "nist-ai-rmf",
    "chai",
    "decision-support",
    "audit",
    "llm-governance",
    "responsible-ai",
    "ai-risk",
    "health-informatics",
    "clinical-decision-support",
    "fda",
    "eu-ai-act",
    "iso-42001",
    "scoring",
    "policy-engine",
    "healthcare-it",
    "ehr",
    "fhir",
    "interoperability"
  ],
  "author": "Forge Partners Inc. <lumen-sdk@forgehealth.ai>",
  "license": "Apache-2.0",
  "homepage": "https://forgelumen.ca",
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
